{
    "compilerOptions": {
        "strict": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["ES2019"],
        "target": "ES2019",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}